<!DOCTYPE html>
<html lang="en">

<head>
  <title>Detalle_producto</title>
  <%- include('../partials/head.ejs') %>
</head>

<body>

  <%- include('../partials/header.ejs') %>
    <h2>DETALLE</h2>
    <h3>SOFT & BOLD</h3>
    <div class="boxx">
      <div class="detalle-boxx">
        <div class="box1">
          <div class="box1_1">
            <h1>
              <%= producto.Nombre_Producto %>
            </h1>
            <h2 class="cantidad">
              <%= producto.Marca %>
            </h2>
            <h2>$ <%= producto.Precio %> COP</h2>
            <h2 class="cantidad">CANTIDAD</h2>
            <input class="number" id="number" type="number">
            <ul class="button_contenedor">

              <li class="button">
                <button class="comprar" type="submit">AGREGAR AL CARRITO</button>
              </li>

            </ul>
          </div>
          <div class="box1_2">
            <img src="/images/products/<%= producto.imagen %>" alt="<%= producto.ID_producto %>">
          </div>
        </div>
        <div class="box_2">
          <h2>DESCRIPCION</h2>
          <P>
            <%= producto.Descripcion %>
          </P>
          <h2>COMPONENETES</h2>
          <p>
            <%= producto.Componentes %>
          </p>
        </div>
      </div>

    </div>

    <h2>TAMBIEN TE PUEDE GUSTAR</h2>
    <div class="productos-venta">
      
      
       
      <% for (let i=0 ; i<productos.length  ; i++) { %>
        <div class="produc">
          <a href="/detalle">
            <img class="img-detalle" src="/images/products/<%= productos[i].imagen %>" alt="<%= productos[i].ID_producto %>">
            <div class="productos-venta-informacion">
              <h3> <%= productos[i].Nombre_Producto %></h3>
              <P><%= productos[i].Marca %></P>
              <P><b>$ <%= productos[i].Precio %>  COP</b></P>
            </div>
          </a>
        </div>
        <%}%>

    </div>
    </div>
    </div>
    <%- include('../partials/footer.ejs') %>

</body>

</html>